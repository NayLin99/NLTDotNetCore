@model List<BlogModel>
@{
    ViewData["Title"] = "Blog";
    int count = 0;
}

<h2>Blog List</h2>

@* <span>@Model.Count</span> *@

<a href="/Blog/Create" class="btn btn-success">New</a>

<table class="table table-responsive">
    <thead>
    <tr>
        <th></th>
        <th>No.</th>
        <th>Title</th>
        <th>Author</th>
        <th>Content</th>
    </tr>
    </thead>
    <tbody>
    @foreach (BlogModel blog in Model)
    {
        <tr>
            <td>
                <a class="btn btn-warning" href="/Blog/Edit/@blog.BlogId">Edit</a>
                <a class="btn btn-danger" href="/Blog/Delete/@blog.BlogId">Delete</a>
            </td>
            <td>@(++count)</td>
            <td>@blog.BlogTitle</td>
            <td>@blog.BlogAuthor</td>
            <td>@blog.BlogContent</td>
        </tr>
    }

    </tbody>
</table>